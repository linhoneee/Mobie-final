<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Logo Section -->

        <!-- Email Input Field -->

        <ImageView
            android:layout_width="411dp"
            android:layout_height="299dp"
            android:contentDescription="App Logo"
            android:elevation="8dp"
            android:src="@drawable/q15" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="#1B5E20"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="#1B5E20"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <!-- Login Button -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1B5E20"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/buttonGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập với Google"
            android:backgroundTint="#DB4437"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp" />

        <!-- Logout Button (Initially Hidden) -->
        <!-- Nút này sẽ ẩn khi người dùng chưa đăng nhập -->

        <!-- Environmental Message at the Bottom -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#C62828"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GreenHome - Hãy cùng sống xanh vì hành tinh của chúng ta!"
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:paddingBottom="16dp" />
    </LinearLayout>
</ScrollView>
